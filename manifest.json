{
  "manifest_version": 3,
  "name": "Nyaa Enhancer",
  "version": "1.3.1",
  "description": "Enhances Nyaa with batch magnet copying, torrent file downloading, and customizable filename options.",
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["clipboardWrite", "downloads", "storage", "activeTab"],
  "host_permissions": [
    "*://*.nyaa.si/*",
    "*://*.nyaa.eu/*",
    "*://*.nya.iss.one/*",
    "*://*.nyaa.ink/*",
    "*://*.nyaa.land/*",
    "*://*.nyaa.digital/*",
    "*://*.ny.iss.one/*"
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.nyaa.si/*",
        "*://*.nyaa.eu/*",
        "*://*.nya.iss.one/*",
        "*://*.nyaa.ink/*",
        "*://*.nyaa.land/*",
        "*://*.nyaa.digital/*",
        "*://*.ny.iss.one/*"
      ],
      "css": ["content.css"],
      "js": ["assets/jszip.min.js", "content.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["assets/jszip.min.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "action": {
    "default_popup": "popup.html"
  }
}
